<UserControl
    x:Class="Mutagen.Bethesda.Examples.PrintContentView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Mutagen.Bethesda.Examples"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:t="clr-namespace:Simple.Wpf.Terminal;assembly=Simple.Wpf.Terminal"
    d:DataContext="{d:DesignInstance local:PrintContentVM,
                                     IsDesignTimeCreatable=True}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Button Command="{Binding RunCommand}" Content="Run" />
        <t:Terminal
            Grid.Row="1"
            Margin="5"
            Background="Black"
            BorderBrush="{StaticResource AccentColorBrush}"
            IsReadOnly="True"
            ItemsSource="{Binding Names}" />
    </Grid>
</UserControl>
