<UserControl
    x:Class="Mutagen.Bethesda.Examples.SimpleOutputView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Mutagen.Bethesda.Examples"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:t="clr-namespace:Simple.Wpf.Terminal;assembly=Simple.Wpf.Terminal"
    d:DataContext="{d:DesignInstance local:SimpleOutputVM}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid Margin="14,14,14,8">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <TextBlock
                Grid.Row="0"
                Grid.Column="0"
                FontSize="14"
                FontWeight="SemiBold"
                Text="{Binding Name}" />
            <TextBlock
                Grid.Row="1"
                Grid.Column="0"
                Margin="0,0,0,14"
                VerticalAlignment="Bottom"
                FontSize="10"
                Foreground="{StaticResource ForegroundDarkBrush}"
                Text="{Binding Description}" />
            <Button
                Grid.Row="0"
                Grid.RowSpan="2"
                Grid.Column="1"
                Width="100"
                Height="30"
                VerticalAlignment="Bottom"
                Command="{Binding RunCommand}"
                Content="Run" />
        </Grid>
        <t:Terminal
            Grid.Row="2"
            Background="Black"
            BorderBrush="{StaticResource AccentColorBrush}"
            IsReadOnly="True"
            ItemsSource="{Binding OutputDisplay}"
            VerticalScrollBarVisibility="Auto" />
        <Grid Grid.Row="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" MinWidth="150" />
                <ColumnDefinition Width="Auto" MinWidth="150" />
            </Grid.ColumnDefinitions>
            <TextBlock
                Grid.Column="0"
                Margin="0,4"
                VerticalAlignment="Center"
                FontSize="11"
                ToolTip="Output count">
                <Run Foreground="{StaticResource ForegroundDarkBrush}" Text="Output count:" />
                <Run Text="{Binding OutputDisplay.Count, Mode=OneWay}" />
            </TextBlock>
            <TextBlock
                Grid.Column="1"
                Margin="0,4,1,4"
                VerticalAlignment="Center"
                FontSize="11"
                ToolTip="Timing of the last run">
                <Run Foreground="{StaticResource ForegroundDarkBrush}" Text="Timing:" />
                <Run Text="{Binding LastTiming, Mode=OneWay}" />
            </TextBlock>
        </Grid>
    </Grid>
</UserControl>
