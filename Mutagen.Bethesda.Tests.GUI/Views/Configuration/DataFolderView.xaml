<local:DataFolderViewBase
    x:Class="Mutagen.Bethesda.Tests.GUI.Views.DataFolderView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Mutagen.Bethesda.Tests.GUI.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:noggog="clr-namespace:Noggog.WPF;assembly=Noggog.WPF"
    d:DesignHeight="35"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid Margin="0,0,20,5">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="70" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <TextBlock Grid.Column="0"
            x:Name="Name"
            Margin="0,0,10,0"
            HorizontalAlignment="Right"
            VerticalAlignment="Center" />
        <noggog:PathPicker x:Name="DataFolderPicker" Grid.Column="1" />
    </Grid>
</local:DataFolderViewBase>
